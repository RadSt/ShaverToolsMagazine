<table class="disposition-calendar">
    <thead>
    <tr>
        <td>пн</td>
        <td>вт</td>
        <td>ср</td>
        <td>чт</td>
        <td>пт</td>
        <td>сб</td>
        <td>вс</td>
    </tr>
    </thead>

    <tbody>
    @foreach (var week in Model.WeeksData)
    {
        <tr>
            @foreach (var
                day in
                week)
            {
                if (day.Day == null)
                {
                    <td class="non-date"/>
                }
                else
                {
                    <td>
                        <div class="text-left disposition-calendar-date"> day.Day </div>
                        <div class="disposition-calendar-sum">@day.ProductName </div >
                    </td>
                }
            }
        </tr>
    }
    </tbody>
</table>