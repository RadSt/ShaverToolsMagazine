@using ShaverToolsShop.ViewModels
@model ShaverToolsShop.ViewModels.CalendarViewModel

@{
    var selectedMonth = Model.SelectedMonth;
    var prevMonth = selectedMonth.AddDays(-1);
    var nextMonth = selectedMonth.AddDays(32);
}

<h3 class="disposition-calendar">
    @Html.ActionLink("Предыдущий", "Index","Calendar", new { selectedDate = prevMonth },new {@class = "disposition-calendar-previous-month" })
    @Model.SelectedMonth.ToString("MMMM yyyy")
    @Html.ActionLink("Следующий", "Index", "Calendar", new { selectedDate = nextMonth },new { @class = "disposition-calendar-next-month" })

</h3>

